{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./node_modules"],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "module": "es6",
    "target": "ESNext",
    "lib": ["dom", "es5", "es6", "es7", "scripthost", "es2015", "es2016", "es2017", "es2016.array.include"],
    "allowUnreachableCode": true,
    "noImplicitReturns": true,
    "noImplicitUseStrict": true,
    "noImplicitThis": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "traceResolution": false,
    "noStrictGenericChecks": false,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "types" : ["react", "react-dom", "immutable"],
    "outDir": "./ts-build",
    "baseUrl": "."
  },
  "exclude": [
    "node_modules",
    "build-backend",
    "build-frontend",
    "build-frontend-modern",
    "build-frontend-legacy",
    "build-scripts",
    "coverage",
    "data",
    "tsDist",
    "dist",
    "ts-build",
    "webpack.config.js"
  ],
  "files": [
    "global.d.ts"
  ]
}
